<wxs src="./bond-info-item.wxs" module="bondInfoItemUtil" />
<template name='bondInfoItemTpl'>
	<view hidden='{{(bondInfo.bond_status === "3" && item.name === "issue_time") || (bondInfo.bond_status !== "3" && item.name === "bid_end")}}' class='bond-info-item-tpl {{item.name}}'>
		<text class='label'>{{item.label}}</text>
		<text class='value'>{{bondInfoItemUtil.parseValue(item.name, bondInfo, from)}}</text>
	</view>
</template>