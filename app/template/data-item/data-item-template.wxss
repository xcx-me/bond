.data-item-template {
  float: left;
}
.data-item-template .item {
  width: 100%;
  float: left;
}
.data-item-template .item.has-splite {
  border-right: 1px solid #E5E5E5;
}
.data-item-template .item.split-item {
  border-left: 1px solid #E5E5E5;
  width: 0;
  height: 60rpx;
  background-color: #E5E5E5;
  position: relative;
  top: 20rpx;
}
.data-item-template .item .overflow-ellipsis {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.data-item-template .item .value {
  word-wrap: break-word;
}
.data-item-template .item text {
  width: 100%;
  float: left;
  text-align: center;
}
