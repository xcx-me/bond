<view class='market-page {{isShowMask ? "fixed" : ""}}'>
	<!-- 市场页 -->
	<view class='market-tab'>
		<view class='market-tab-list' data-tid='consultation' catchtap='switchNav'>
			<view class="{{currentTabId === 'consultation' ? 'on' : ''}}" >询量</view>
		</view>
		<view class="market-tab-list" data-tid='announcement' catchtap='switchNav'>
			<view class="{{currentTabId === 'announcement' ? 'on' : ''}}" >公告</view>
		</view>
		<view class="market-tab-list" data-tid='issues' catchtap='switchNav'>
			<view class="{{currentTabId === 'issues' ? 'on' : ''}}">发行</view>
		</view>
	</view>

	<loading wx:if='{{loading}}'>加载中...</loading>

	<view hidden='{{loading}}' >
		<swiper current-item-id='{{currentTabId}}' class='swiper-tab-box' duration='300' style='height: {{winHeight}}px' bindchange='bindChangeTab'>
			<block wx:for='{{tabIdList}}' wx:for-item='tabId' wx:key='index'>
				<swiper-item item-id='{{tabId}}'> 
					<Filter wx:if='{{tabId === currentTabId}}' bind:doFilterEvent='onDoFilter' bind:showFilterEvent='onShowFilterEvent'/>
					<DateBar wx:if='{{tabId === currentTabId && tabId === "issues"}}' bind:onFilterEvent='onDoFilter' />
					<scroll-view wx:if='{{tabId === currentTabId}}'class='stage-pallet' scroll-y='{{!isShowMask}}' bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad" bindscroll="scroll" bindtouchmove="ballMoveEvent">
						<BondListDisplay
							from='board'
							isMine='{{false}}'
							bondList='{{bondList}}'
							uid=''
							userId=''
							bind:showSaleEvent='onShowSaleEvent'
						/>
					</scroll-view>
				</swiper-item>
			</block>
		</swiper>
	</view>

	<view class="dialog-container">
		<SaleDialog id='sale-dialog'
			title='销售经理'
			saleList='{{saleList}}'
			cancelText='取消'
			confirm='确认'
			bind:cancelEvent="_cancelSelectSaleEvent"
			bind:confirmEvent="_confirmSelectSaleEvent">
		</SaleDialog>	
	</view>

	<view class="loading-more" hidden="{{!loadMore}}">
		<view class="icon"></view>
		<view class="tips"><text>正在加载</text></view>
	</view>
</view>