/* app/page/market/market.wxss */
.market-page {
  width: 100%;
}
.market-page .market-tab {
  width: 100%;
  border-bottom: 2rpx solid #D8D8D8;
  text-align: center;
  line-height: 77rpx;
  background-color: #FFFFFF;
}
.market-page .market-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 13.33%;
  height: 78rpx;
  padding: 0 10%;
  color: #000000;
}
.market-page .loading-more {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #888888;
  font-size: 32rpx;
}
.market-page .on {
  color: #2196F3;
  border-bottom: 5rpx solid #2196F3;
}
.market-page .swiper-tab-box {
  display: block;
  width: 100%;
  height: 100%;
}
.market-page.fixed {
  position: fixed;
}
