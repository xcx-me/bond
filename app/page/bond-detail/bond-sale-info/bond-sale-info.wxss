.bond-info-item-tpl {
  padding: 8rpx 0;
}
.bond-info-item-tpl .label {
  color: #999999;
}
.seller-info-tpl {
  overflow: hidden;
}
.seller-info-tpl view {
  position: relative;
  float: left;
}
.seller-info-tpl view.image {
  margin-right: 20rpx;
}
.seller-info-tpl .face-url {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  position: relative;
}
.seller-info-tpl .v-user {
  position: absolute;
  bottom: 0;
  right: -16rpx;
  padding: 18rpx;
}
.seller-info-tpl .under-line {
  font-size: 0;
}
.seller-info-tpl .user-name {
  font-size: x-large;
}
.seller-info-tpl .company-name {
  font-size: small;
}
.bond-sale-info .header {
  position: relative;
  width: 100%;
  margin-bottom: 10rpx;
}
.bond-sale-info .header .title {
  height: 42rpx;
  line-height: 42rpx;
  position: relative;
  left: 8rpx;
}
.bond-sale-info .header .btn-edit {
  position: absolute;
  top: 0;
  right: 8rpx;
  line-height: 36rpx;
  padding: 3rpx 20rpx;
  background: none;
  border: 1px solid #2196F3;
  color: #2196F3;
}
.bond-sale-info .item {
  float: left;
  width: 100%;
}
.bond-sale-info .item .seller-info-tpl .image .face-url {
  width: 48rpx;
  height: 48rpx;
}
.bond-sale-info .item .seller-info-tpl .image .v-user {
  padding: 16rpx;
}
.bond-sale-info .item .seller-info-tpl .name {
  position: relative;
  top: 8rpx;
}
.bond-sale-info .item .seller-info-tpl .name .user-name {
  font-size: small;
}
.bond-sale-info .item .seller-info-tpl .name .under-line {
  font-size: small;
}
.bond-sale-info .sale-list {
  overflow: auto;
}
