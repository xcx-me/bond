.bond-detail-page {
  font-size: small;
}
.bond-detail-page .tab-bar {
  overflow: hidden;
}
.bond-detail-page .tab-bar view {
  float: left;
  width: 33.3%;
  padding: 10rpx 0;
  text-align: center;
}
.bond-detail-page .tab-bar view.active {
  background: #FFFFFF;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.bond-detail-page .tab-bar .question-total {
  color: #2196F3;
}
.bond-detail-page .content scroll-view {
  height: 100%;
}
.bond-detail-page .content .other-bond-list {
  margin-top: 10rpx;
}
