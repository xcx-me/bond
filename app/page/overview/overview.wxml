<import src="../../template/seller-info/seller-template.wxml" />

<view class='overview-page page-wrapper'>
	<block wx:if='{{storeRegistered}}'>
		<StoreDetail navigatorUrl='../my-configuration/my-configuration' vUrl='../../asset/image/qtrade/sprites_01.png' userId='{{userId}}' needUpdate='{{needUpdate}}'/>
	</block>
	<block wx:else >
		<view class='personal-info-pallet pallet' hidden='{{showLoading}}'>
			<template is='sellerInfoTpl' data='{{...userInfo}}'></template>
        </view>
	</block>
	
    <view class='recent-notice pallet'>
        <view wx:if='{{storeRegistered}}'>
			<view class='mystore-pallet' bindtap='toMyStore'>
				<navigator url='../store/store?uid=0'>进入我的店铺</navigator>
			</view>
			<view class="dynamic-pallet pallet-has-slite-line">
				<StoreDynamic detailUrl='../bond-detail/bond-detail' needUpdate='{{needUpdate}}'/>
			</view>
        </view>
        <view class='register-store' wx:elif='{{!showLoading}}'>
			<view class='tips'>
				<text>欢迎来QTrade上开通店铺，并发布报价</text>
			</view>
			<button class='shop-button' hover-class='button-hover' disabled='{{!isAgreedQtrade}}' size='mini' type='primary' bindtap="doOpenStore">立马开店</button>
            <!-- <navigator url='../register-store-complete/register-store-complete'>
				<button class='shop-button' hover-class='button-hover' disabled='{{!isAgreedQtrade}}' size='mini' type='primary'>立马开店</button>
			</navigator> -->
			<view class='protocol'>
				<checkbox-group bindchange="checkboxChange">
					<label wx:for="{{checkboxItems}}" wx:key="value">
						<checkbox value="{{item.value}}" checked="{{item.checked}}"/>点击立马开店表示同意
					</label>
				</checkbox-group>
				<navigator class='to-qtrade-protocol' url='../protocol/protocol' hover-class="navigator-hover">《QTrade服务协议》</navigator>
			</view>
        </view>
    </view>
</view>