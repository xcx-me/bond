.seller-info-tpl {
  overflow: hidden;
}
.seller-info-tpl view {
  position: relative;
  float: left;
}
.seller-info-tpl view.image {
  margin-right: 20rpx;
}
.seller-info-tpl .face-url {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  position: relative;
}
.seller-info-tpl .v-user {
  position: absolute;
  bottom: 0;
  right: -16rpx;
  padding: 18rpx;
}
.seller-info-tpl .zhucheng {
  position: absolute;
  bottom: 5rpx;
  right: -3rpx;
  width: 26rpx;
  height: 26rpx;
  background: #E64340;
  border-radius: 100%;
}
.seller-info-tpl .under-line {
  font-size: 0;
}
.seller-info-tpl .user-name {
  font-size: x-large;
}
.seller-info-tpl .company-name {
  font-size: small;
}
.store-header-component {
  position: relative;
  background: #FFFFFF;
  padding: 24rpx 30rpx;
}
.store-header-component .personal-info-pallet {
  padding-bottom: 24rpx;
}
.store-header-component .personal-info-pallet .seller-info-tpl .image {
  height: 128rpx;
  margin-right: 26rpx;
}
.store-header-component .personal-info-pallet .seller-info-tpl .image .face-url {
  width: 128rpx;
  height: 128rpx;
}
.store-header-component .personal-info-pallet .seller-info-tpl .name {
  position: relative;
  top: 20rpx;
}
.store-header-component .personal-info-pallet .seller-info-tpl .name .user-name {
  display: block;
  width: 200rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: #000000;
  line-height: 50rpx;
}
.store-header-component .personal-info-pallet .seller-info-tpl .name .company-name {
  width: 300rpx;
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: #9b9b9b;
  line-height: 37rpx;
}
.store-header-component .personal-info-pallet.is-qtrade .seller-info-tpl .face-url {
  width: 128rpx;
  height: 110rpx;
  border-radius: 0;
}
.store-header-component .store-statistics-component {
  border-top: 1rpx solid #CCCCCC;
}
.store-header-component .icon-right-arrow {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #C7C7CC;
  border-right: 4rpx solid #C7C7CC;
  transform: rotate(45deg);
  position: absolute;
  top: 76rpx;
  right: 30rpx;
}
