.seller-info-tpl {
  overflow: hidden;
}
.seller-info-tpl view {
  position: relative;
  float: left;
}
.seller-info-tpl view.image {
  margin-right: 20rpx;
}
.seller-info-tpl .face-url {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  position: relative;
}
.seller-info-tpl .v-user {
  position: absolute;
  bottom: 0;
  right: -16rpx;
  padding: 18rpx;
}
.seller-info-tpl .zhucheng {
  position: absolute;
  bottom: 5rpx;
  right: -3rpx;
  width: 26rpx;
  height: 26rpx;
  background: red;
  border-radius: 100%;
}
.seller-info-tpl .under-line {
  font-size: 0;
}
.seller-info-tpl .user-name {
  font-size: x-large;
}
.seller-info-tpl .company-name {
  font-size: small;
}
.store-header-component {
  position: relative;
  padding: 20rpx;
  background: #FFFFFF;
}
.store-header-component .personal-info-pallet + .store-statistics-component {
  border-top: 1rpx solid #CCCCCC;
}
.store-header-component .personal-info-pallet.is-qtrade .seller-info-tpl .face-url {
  width: 60rpx;
  height: 50rpx;
  border-radius: 0;
}
.store-header-component .btn-to-index {
  position: absolute;
  top: 20rpx;
  right: 8rpx;
  line-height: 36rpx;
  padding: 3rpx 20rpx;
  background: none;
  border: 1px solid #2196F3;
  color: #2196F3;
}
