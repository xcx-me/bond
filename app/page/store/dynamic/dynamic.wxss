.line-text-line-tpl {
  background: #EFEFF4;
  margin: 30rpx 0;
  text-align: center;
}
.line-text-line-tpl .line {
  background: #D8D8D8;
  margin-top: 4rpx;
  display: inline-block;
  width: 100rpx;
  height: 1rpx;
  vertical-align: middle;
}
.line-text-line-tpl .title {
  display: inline-block;
  background: #EFEFF4;
  padding: 0 30rpx;
  position: relative;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: #888888;
}
.blank-signal-tpl {
  background: #EFEFF4;
  text-align: center;
  margin-top: 140rpx;
}
.blank-signal-tpl.detail {
  margin-top: 0;
}
.store-dynamic-component .dynamic-item {
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFFFFF;
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  color: #353535;
}
.store-dynamic-component .dynamic-item .item-content text {
  float: left;
}
.store-dynamic-component .dynamic-item .item-content text.bond-simple-name {
  margin-right: 6px;
  color: #2196F3;
  cursor: pointer;
}
.store-dynamic-component .dynamic-item .item-content .overflow-ellipsis {
  max-width: calc(100% - 260rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.store-dynamic-component .dynamic-item .icon-right-arrow {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #C7C7CC;
  border-right: 4rpx solid #C7C7CC;
  transform: rotate(45deg);
  position: absolute;
  top: 35rpx;
  right: 30rpx;
}
.store-dynamic-component .dynamic-item:active {
  background: #F5F5F5;
}
