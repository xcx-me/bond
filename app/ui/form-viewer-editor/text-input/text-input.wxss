.text-input-component {
  border-bottom: 1rpx solid #E5E5E5;
  font-size: 34rpx;
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  height: 48rpx;
}
.text-input-component .label-area {
  width: 204rpx;
}
.text-input-component .label-area .star {
  color: #E64340;
}
.text-input-component .label-area.disabled {
  color: #888888;
}
.text-input-component .label-area.disabled .star {
  color: #888888;
}
.text-input-component .input-field {
  width: 100%;
}
.text-input-component .input-field.warning {
  color: orange;
}
.text-input-component .input-field.disabled {
  color: #888888;
}
.text-input-component .input-placeholder {
  color: #B2B2B2;
  font-size: 32rpx;
}
