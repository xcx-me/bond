
<view class='bond-form-editor' hidden='{{modalHidden}}'>
	<!-- 债券简称 -->
	<view class='bond-simple-name row-item'>
		<view class='label-area'>债券简称:</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='simpleNameChange' data-input-name='bond_simple_name' value='{{formData.bond_simple_name}}'
				disabled='{{editorFlag}}' style='background-color: {{editorFlag ? "#DDDDDD" : ""}}; color: {{editorFlag ? "#999999" : "" }}'
			/>
		</view>
	</view>

	<!-- 参考收益 -->
	<view class='reference-income row-item'>
		<view class='label-area'>参考收益：</view>
		<view class='editor-area'>
			<input type='text' bindinput='changeValue' data-input-name='left_benefit' value='{{formData.left_benefit}}' />
			<input type='text' bindinput='changeValue' data-input-name='right_benefit' value='{{formData.right_benefit}}' />
		</view>
	</view>

	<!-- 主/债评级 -->
	<view class='bond-rate row-item'>
		<view class='label-area'>主/债评级：</view>
		<view class='editor-area'>
			<input type='text' bindinput='changeValue' data-input-name='subject_rating' value='{{formData.subject_rating}}' />
			<input type='text' bindinput='changeValue' data-input-name='facility_rating' value='{{formData.facility_rating}}' />
		</view>
	</view>

	<!-- 发行期限 -->
	<view class='reference-income row-item'>
		<view class='label-area'>发行期限：</view>
		<view class='editor-area'>
			<input type='text' bindinput='changeValue' data-input-name='deadline' value='{{formData.deadline}}' />
		</view>
	</view>

	<!-- 发行量 -->
	<view class='bond-circulation row-item'>
		<view class='label-area'>发行量：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='issue_total' value='{{formData.issue_total}}' />
		</view>
	</view>

	<!-- 上市地点 -->
	<view class='listing-spot row-item'>
		<view class='label-area'>上市地点：</view>
		<view class='editor-area'>
			<checkbox-group class='checkbox-list' bindchange="changeListingspot" data-listing-spot='public_place'>
				<view class="checkbox" wx:for="{{listingSpotItems}}" wx:key="key">
					<checkbox wx:key="" value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
				</view>
			</checkbox-group>
			<view>{{listingSpotValue}}</view>
		</view>
	</view>

	<!-- 发行时间 -->
	<view class='release-time row-item'>
		<view class='label-area'>发行时间：</view>
		<picker mode="date" value="{{formData.issue_time}}" start='2000-01-01' end='' bindchange='changeValue' data-input-name='issue_time'>
			<view class='time-select-picker'>
				当前选择: {{formData.issue_time}}
			</view>
		</picker>
	</view>

	<!-- 截标时间 -->
	<view class='closing-time row-item'>
		<view class='label-area'>截标时间：</view>
		<picker mode="multiSelector" value="{{dateTime}}" bindchange='changeDateTime' range="{{dateTimeArray}}" data-input-name='bid_end'>
			<view class='time-select-picker'>
				当前选择: {{dateTimeArray[0][dateTime[0]]}}-{{dateTimeArray[1][dateTime[1]]}}-{{dateTimeArray[2][dateTime[2]]}} {{dateTimeArray[3][dateTime[3]]}}:{{dateTimeArray[4][dateTime[4]]}}
			</view>
		</picker>
	</view>

	<!-- 企业性质 -->
	<view class='enterprise-nature row-item'>
		<view class='label-area'>企业性质：</view>
		<view class='editor-area'>
			<picker class='dropdown-btn' bindchange="changeEnterpriseNature" value="{{enterpriseIndex1}}" range="{{enterpriseNature}}" data-enterprise-nature='company_type'>
				<view class='select-button'>
					<text>{{enterpriseNature[enterpriseIndex]}}</text>
				</view>
			</picker>
		</view>
	</view>

	<!-- 债券品种 -->
	<view class='bond-type row-item'>
		<view class='label-area'>债券品种：</view>
		<view class='editor-area'>
			<checkbox-group bindchange="changeBondType" data-bond-type='bond_type'>
				<view class='checkbox' wx:for="{{bondType}}" wx:key="key">
					<checkbox wx:key='' value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
				</view>
			</checkbox-group>
		</view>
		<text class='bond-type'>{{bondTypeValue}}</text>
	</view>

	<!-- 发行方式 -->
	<view class='issuance-method row-item'>
		<view class='label-area'>发行方式：</view>
		<view class='editor-area'>
			<picker class='dropdown-btn' bindchange="changeIssuancemethod" value="{{issuanceMethodIndex1}}" range="{{issuanceMethodItem}}" data-issuance-method='issue_way'>
				<view class='select-button'>
					<text>{{issuanceMethodItem[issuanceMethodIndex]}}</text>
				</view>
			</picker>
		</view>
	</view>

	<!-- 利率方式 -->
	<view class='rate-method row-item'>
		<view class='label-area'>利率方式：</view>
		<view class='editor-area'>
			<picker class='dropdown-btn' bindchange="handleDropdownRateWay" value="{{rateWayIndex1}}" range="{{rateWayArray}}" data-rate-method='rate_way'>
				<view class='select-button'>
					<text>{{rateWayArray[rateWayIndex]}}</text>
				</view>
			</picker>
			<view class="section {{rateReply ? 'on' : 'off'}}">
				<input type='text' bindinput='changeValue' data-input-name='benchmark' />
			</view>
		</view>
	</view>

	<!-- 计息频率 -->
	<view class='cal-freq row-item'>
		<view class='label-area'>计息频率：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='cal_freq' value='{{formData.cal_freq}}' />
		</view>
	</view>
	
	<!-- 付息频率 -->
	<view class='pay-freq row-item'>
		<view class='label-area'>付息频率：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='pay_freq' value='{{formData.pay_freq}}' />
		</view>
	</view>

	<!-- 还本方式 -->
	<view class='repay-way row-item'>
		<view class='label-area'>还本方式：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='repay_way' value='{{formData.repay_way}}' />
		</view>
	</view>

	<!-- 特殊条款 -->
	<view class='specific-items row-item'>
		<view class='label-area'>特殊条款：</view>
		<view class='editor-area'>
			<checkbox-group bindchange="changeSpecificItems" data-specific-items='specific_items'>
				<view class='checkbox' wx:for="{{specificItems}}" wx:key="key">
					<checkbox wx:key='' value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
				</view>
			</checkbox-group>
		</view>
		<text class=''>{{specificitemsValue}}</text>
	</view>

	<!-- 增信担保 -->
	<view class='credit-guarantee row-item'>
		<view class='label-area'>增信担保：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='credit_guarantee' value='{{formData.credit_guarantee}}' />
		</view>
	</view>

	<!-- 主承 -->
	<view class='zhu-cheng row-item'>
		<view class='label-area'>主承：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='zhu_cheng' value='{{formData.zhu_cheng}}' />
		</view>
	</view>

	<!-- 债券全称 -->
	<view class='bond-fullname row-item'>
		<view class='label-area'>还本方式：</view>
		<view class='editor-area'>
			<input class='' type='text' bindinput='changeValue' data-input-name='bond_full_name' value='{{formData.bond_full_name}}' />
		</view>
	</view>

	<!-- 上传附件 -->
	<view class='upload-fiel'>

	</view>

