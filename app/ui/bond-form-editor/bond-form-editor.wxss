  background-size: cover;
}
.bond-form-editor .checkbox-item-area .selected {
  color: #2196F3;
  background-color: rgba(33, 150, 243, 0.15);
}
.bond-form-editor .checkbox-item-area-hide {
  display: none;
}
.bond-form-editor .dropdown-btn {
  width: 100%;
}
.bond-form-editor .dropdown-btn .down-icon {
  display: block;
  width: 100%;
  height: 48rpx;
}
.bond-form-editor .rate-method .label {
  display: inline-block;
}
.bond-form-editor .rate-method .editor-area .rate-method-picker {
  width: 45%;
  border-right: 1rpx solid #E5E5E5;
}
.bond-form-editor .rate-method .editor-area .rate-method-picker .rate-triangle-right {
  margin-right: 16rpx;
}
.bond-form-editor .rate-method .section {
  display: inline-block;
  vertical-align: top;
  width: 50%;
  font-size: 28rpx;
  margin-left: 15rpx;
}
.bond-form-editor .rate-method .section .benchmark-label {
  display: flex;
  float: left;
  margin: 2rpx 15rpx 0 0;
}
.bond-form-editor .rate-method .section .benchmark-input {
  width: 65%;
}
.bond-form-editor .rate-method .on {
  color: #000000;
}
.bond-form-editor .rate-method .off {
  color: #B2B2B2;
}
.bond-form-editor .upload-fiel {
  display: block;
  padding: 12rpx 0;
}
.bond-form-editor .upload-fiel .attention-icon {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
  line-height: 48rpx;
  vertical-align: middle;
}
.bond-form-editor .upload-fiel text {
  font-size: 28rpx;
  color: #888888;
}
.bond-form-editor .bond-simple-name {
  position: relative;
}
.bond-form-editor .simple-name-associate {
  z-index: 99;
  position: absolute;
  left: 0;
  top: 88rpx;
  width: calc(100% + 30rpx);
  padding-top: 10rpx;
  margin-left: -30rpx;
  background-color: #EFEFF4;
  border-bottom: 1rpx solid #E5E5E5;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.175);
}
.bond-form-editor .simple-name-associate view {
  padding: 20rpx 60rpx;
  margin-left: -30rpx;
  border-bottom: 1rpx solid #EFEFF4;
  background-color: #FFFFFF;
}
.bond-form-editor .simple-name-associate .close-mask {
  z-index: 999;
  position: fixed;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0.3;
}
.bond-form-editor .simple-name-associate .highlight-color {
  color: #f04134;
}
.bond-form-editor .show-name-list {
  display: block;
}
.bond-form-editor .hide-name-list {
  display: none;
}
