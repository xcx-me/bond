.bond-form-editor {
  padding-left: 30rpx;
  font-size: 34rpx;
}
.bond-form-editor view {
  display: flex;
  line-height: 48rpx;
}
.bond-form-editor .form-editor-top {
  padding: 24rpx 30rpx 6rpx;
  margin-left: -30rpx;
  font-size: 28rpx;
  color: #888888;
  background-color: #F1F1F1;
  border-bottom: 1rpx solid #E5E5E5;
}
.bond-form-editor .star-span {
  padding-top: 5rpx;
  color: #E64340;
  margin: 0 2rpx;
}
.bond-form-editor input {
  border: none;
  outline: none;
  height: 48rpx;
}
.bond-form-editor .row-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E5E5E5;
}
.bond-form-editor .label-area {
  width: 30%;
  float: left;
}
.bond-form-editor .editor-area {
  width: 65%;
}
.bond-form-editor .editor-area input {
  width: 100%;
}
.bond-form-editor .editor-area .color-gray {
  color: #B2B2B2;
}
.bond-form-editor .editor-area .spacing-line {
  display: inline-block;
  width: 36rpx;
  height: 2rpx;
  background-color: #979797;
  margin: 25rpx 20rpx 0 0;
}
.bond-form-editor .editor-area .triangle-icon {
  float: right;
  display: block;
  width: 20rpx;
  height: 20rpx;
  margin-top: 10rpx;
  border-top: 4rpx solid #C7C7CC;
  border-right: 4rpx solid #C7C7CC;
}
.bond-form-editor .editor-area .triangle-down {
  transform: rotate(135deg);
}
.bond-form-editor .editor-area .triangle-up {
  margin-top: 22rpx;
  transform: rotate(-45deg);
}
.bond-form-editor .editor-area .highlight-color {
  color: #FAA61A;
}
.bond-form-editor .release-time .editor-area .time-picker-area,
.bond-form-editor .closing-time .editor-area .time-picker-area {
  display: block;
  float: right;
  width: 100%;
  height: 48rpx;
}
.bond-form-editor .release-time .editor-area .time-picker-area .time-select-picker,
.bond-form-editor .closing-time .editor-area .time-picker-area .time-select-picker {
  display: block;
  width: 100%;
  height: 48rpx;
}
.bond-form-editor .release-time .editor-area .time-picker-area .time-select-picker .calendar-icon,
.bond-form-editor .closing-time .editor-area .time-picker-area .time-select-picker .calendar-icon {
  float: right;
  display: block;
  width: 32rpx;
  height: 32rpx;
  margin-top: 14rpx;
}
.bond-form-editor .release-time .editor-area .time-picker-area .time-select-picker .calendar-icon image,
.bond-form-editor .closing-time .editor-area .time-picker-area .time-select-picker .calendar-icon image {
  display: block;
  width: 32rpx;
  height: 32rpx;
}
.bond-form-editor .listing-spot,
.bond-form-editor .bond-type,
.bond-form-editor .specific-items {
  display: block;
}
.bond-form-editor .listing-spot .editor-area,
.bond-form-editor .bond-type .editor-area,
.bond-form-editor .specific-items .editor-area {
  display: block;
}
.bond-form-editor .checkbox-flag-area {
  width: 100%;
}
.bond-form-editor .checkbox-item-area {
  display: block;
  width: 100%;
  padding-top: 20rpx;
  overflow: hidden;
}
.bond-form-editor .checkbox-item-area .checkbox-item {
  position: relative;
  display: block;
  float: left;
  width: 182rpx;
  height: 42rpx;
  padding: 14rpx;
  margin: 0 20rpx 20rpx 0;
  font-size: 28rpx;
  line-height: 42rpx;
  text-align: center;
  background-color: #F5F5F5;
}
.bond-form-editor .checkbox-item-area .checkbox-item .delete-icon {
